from datetime import datetime

currentDay = datetime.now().day
currentMonth = datetime.now().month
currentYear = datetime.now().year

tarih=[currentDay,currentMonth,currentYear]

print("Tarih:",tarih)

while True:
    dogumGunu=int(input("Hangi gün doğdunuz?(1-31)"))
    if not dogumGunu in range(1,32):
        print("Yanlış bir değer girdiniz. Lütfen düzeltin")
    else:
        dogumAyi=int(input("Hangi ay doğdunuz?(1-12)"))
        if not dogumAyi in range(1,13):
            print("Yanlış bir değer girdiniz. Lütfen düzeltin")
        else:
            dogumYili=int(input("Hangi yıl doğdunuz?"))
            if not dogumYili in range(1915,2017):
                print("Yanlış bir değer girdiniz. Lütfen düzeltin")
            else:
                dogumtarihi=[dogumGunu,dogumAyi,dogumYili]
                print("Doğum Tarihin:",dogumtarihi)
                break
yasgun = tarih[0]-dogumtarihi[0]
if yasgun<0:
    currentMonth = currentMonth -1
    yasgun=yasgun+30
    
yasay = tarih[1]-dogumtarihi[1]
if yasay<0:
    currentYear = currentYear-1
    yasay=yasay+11
    
yasyil = tarih[2]-dogumtarihi[2]
   
print(yasyil,"yıl",yasay,"ay",yasgun,"gündür yaşıyorsun.")


